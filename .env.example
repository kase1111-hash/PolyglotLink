# PolyglotLink Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
POLYGLOTLINK_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# LLM Configuration
# =============================================================================
# OpenAI API Key (required for semantic translation)
OPENAI_API_KEY=sk-your-api-key-here

# LLM Settings
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_THRESHOLD=0.85

# =============================================================================
# Protocol Listeners
# =============================================================================
# HTTP Ingress
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_PATH_PREFIX=/ingest

# MQTT Listener
MQTT_ENABLED=true
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=polyglotlink-listener
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TLS_ENABLED=false
MQTT_TOPIC_PATTERNS=sensors/#,devices/+/telemetry

# CoAP Listener
COAP_ENABLED=true
COAP_HOST=0.0.0.0
COAP_PORT=5683

# Modbus Listener
MODBUS_ENABLED=false
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502
MODBUS_POLL_INTERVAL=5

# OPC-UA Listener
OPCUA_ENABLED=false
OPCUA_ENDPOINT_URL=opc.tcp://localhost:4840

# WebSocket Listener
WEBSOCKET_ENABLED=true
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8081

# =============================================================================
# Storage Configuration
# =============================================================================
# Redis (Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Neo4j (Ontology Graph)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=polyglotlink

# Weaviate (Vector Store)
WEAVIATE_URL=http://localhost:8085

# TimescaleDB (Time-series)
TIMESCALE_URL=postgresql://postgres:postgres@localhost:5432/iot

# =============================================================================
# Output Configuration
# =============================================================================
# Kafka Output
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=iot.normalized

# MQTT Output
MQTT_OUTPUT_ENABLED=true
MQTT_OUTPUT_TOPIC_PREFIX=normalized

# HTTP Webhooks
HTTP_OUTPUT_ENABLED=false
HTTP_OUTPUT_ENDPOINTS=

# =============================================================================
# Monitoring
# =============================================================================
# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
